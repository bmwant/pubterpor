[program:{{ app_alias }}]
environment=
  HOME="/home/{{ ansible_ssh_user }}",
  USER="{{ ansible_ssh_user }}",
  WORKSPACE_DIR="{{ workspace_dir }}"
command=pipenv run python run.py
directory={{ project_root }}
user={{ ansible_ssh_user }}
autostart=true
autorestart=true
redirect_stderr=true
stdout_logfile=/var/log/{{ app_alias }}.supervisor.stdout
stopsignal=QUIT
